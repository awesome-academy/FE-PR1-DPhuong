				form(action="/action_page.php")
					div.form-label
						each label in ['Tên', 'Email', 'Ý kiến']
							label(for="name")= label
								span  *
					div.form-input
						input(type="text" name="name" required)
						input(type="text" name="email" required)
						textarea(name="comment" row='5' required)
						input.submit(type="submit" value='GỞI Ý KIẾN')
				div.blog-content__article-comment
					h2 Bình luận (3)
					div.article-comment__slide
						+commentSlide('slide-1', 'item-1', 'Bình luận bởi Giangle 1')
						+commentSlide('slide-2', 'item-2', 'Bình luận bởi Jane 22')
						+commentSlide('slide-3', 'item-3', 'Bình luận bởi Abcxyz 333')
						a(href='#')
							i.fa.fa-angle-right
						label.slide-3(for="slide-3") 3
						label.slide-2(for="slide-2") 2
						label.slide-1(for="slide-1") 1
						a(href='#')
							i.fa.fa-angle-left