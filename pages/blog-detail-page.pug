extend ../pages/layout
block page
	include ../pages/partials/header-info
block unique content
	+showNav('Trang chủ / ', '', 'Blog')
	div.blog-detail
		+tittle('BLOG', 'assets/image/titleleft-dark.png')
		div.blog-content
			div.blog-content__item
				div.blog-content__item-news
					h3 bài viết mới nhất
					+newsBlogIntro('assets/image/VINSUAL04.jpg','cách sắp xếp nội thất trong nhà', '12/06/2015')
					+newsBlogIntro('assets/image/VINSUAL04.jpg','cách sắp xếp nội thất trong nhà', '12/06/2015')
					+newsBlogIntro('assets/image/VINSUAL04.jpg','cách sắp xếp nội thất trong nhà', '12/06/2015')
				div.blog-content__item-tag
					h3 blog tags
					- const blogTag= ['Đồng hồ', 'Túi', 'Phụ kiện', 'Giày', 'Áo sơ mi', 'Nước hoa'];
						each tagName in blogTag
							a(href='#')=tagName
				div.blog-content__item-video
					h3 lasted video
					video(controls)
						source(src='assets/video/movie.mp4' type='video/mp4')
			div.blog-content__article
				div.blog-content__article-content
					img(src='assets/image/Depositphotos_3010981_original1.jpg' alt='wine')
					h2 vang thăng long classic
					p.article-content__info
						span Đăng bởi Giang Le
						span 30/06/2015
